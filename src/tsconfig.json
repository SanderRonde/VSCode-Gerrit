{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "../out",
		"lib": ["ES2020"],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noImplicitOverride": true,
		"skipLibCheck": true
	},
	"exclude": [
		"../node_modules",
		"../.vscode-test",
		"../submodules",
		"views/activityBar/review/html/src",
		"views/activityBar/review/html/dist"
	]
}
